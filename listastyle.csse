#al {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
  background-image: url("space-stars-no-copyright.jpg");
}

#al li {
   float: left;
}

#al li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  bottom: 10px;
}

#al li a:hover {
  background-color: #111;
}

#bl{
  height: 300%;
